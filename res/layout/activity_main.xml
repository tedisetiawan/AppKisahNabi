<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent"
    android:orientation="vertical" 
  	android:background="@drawable/bg_main"
	android:padding="10dp" >

  <TextView
    android:id="@+id/tap_text"
    android:text="KISAH 25 NABI DAN RASUL"
    android:textSize="19sp"
    android:layout_width="match_parent"
    android:layout_marginLeft="70dp"
    android:textColor="#fff"
    android:layout_height="wrap_content"/>
  
  <TextView 
	android:layout_height="wrap_content"
    android:textSize="12sp"
    android:layout_marginLeft="70dp"
    android:textColor="#fff"
    android:text="Belajar dan Mengenal Kisah Nabi dan Rasul"
    android:layout_marginBottom="30dp"
	android:layout_width="fill_parent"/>
  
  <TextView 
	android:layout_height="wrap_content"
    android:textSize="18sp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="30dp"
    android:textColor="#000"
    android:textStyle="bold"
    android:gravity="center_horizontal"
    android:text="Selamat Datang di Aplikasi \n Kisah Nabi dan Rasul"
	android:layout_width="fill_parent"/>
  
  
<TableLayout
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:gravity="top"
    android:stretchColumns="*">
    
   <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/tableRow2"
        android:layout_width="match_parent">
        <Button
        	android:id="@+id/btn_data_nabi"
        	style="@style/DashboardButton"
        	android:drawableTop="@drawable/database"
    		android:layout_span="3"
    		android:textColor="#000"
        	android:text="Data Nabi dan Rasul" />
        <Button
        	android:id="@+id/btn_tambah_data"
        	style="@style/DashboardButton"
    		android:layout_span="3"
    		android:textColor="#000"
        	android:drawableTop="@drawable/tambah"
        	android:text="Tambah Data" />
    </TableRow>
   <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/tableRow2"
        android:layout_width="match_parent">
        <Button
        	android:id="@+id/btn_login"
        	style="@style/DashboardButton"
    		android:layout_span="3"
    		android:textColor="#000"
        	android:drawableTop="@drawable/login"
        	android:text="Log In Admin" />
        <Button
        	android:id="@+id/btn_about"
        	style="@style/DashboardButton"
    		android:layout_span="3"
    		android:textColor="#000"
        	android:drawableTop="@drawable/about"
        	android:text="Tentang Penulis" />
    </TableRow>
</TableLayout>

</LinearLayout>